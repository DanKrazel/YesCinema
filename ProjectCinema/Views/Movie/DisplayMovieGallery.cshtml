@{
    ViewBag.Title = "Movie Gallery";
}

<h2>Movie Gallery</h2>

@* Normal and ThemeRoller*@
<table id="MOVIETable" class="display">
    @*Semantic UI*@
    @*<table id="employeeTable" class="ui celled table">*@
    @*Bootstrap*@
    @*<table id="employeeTable" class="table table-striped table-bordered">*@

    <thead>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>SHOWTIME</th>
            <th>PRICE</th>
            <th>SALLE</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>SHOWTIME</th>
            <th>PRICE</th>
            <th>SALLE</th>
        </tr>
    </tfoot>
</table>

